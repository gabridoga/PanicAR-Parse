<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/building_imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/name_textView"
        android:layout_alignTop="@+id/building_imageView"
        android:layout_toRightOf="@+id/building_imageView"
        android:layout_toEndOf="@+id/building_imageView"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/address_textView"
        android:layout_below="@+id/name_textView"
        android:layout_toRightOf="@+id/building_imageView"
        android:layout_toEndOf="@+id/building_imageView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/description_textView"
        android:layout_below="@+id/address_textView"
        android:layout_alignLeft="@+id/address_textView"
        android:layout_alignStart="@+id/address_textView"
        android:layout_marginTop="10dp"
        android:textSize="13dp" />
</RelativeLayout>
